rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Programs - Public read, admin write
    match /programs/{programId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Sessions - Public read, admin write
    match /sessions/{sessionId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Bookings - Users can read their own, admins can read all
    match /bookings/{bookingId} {
      allow read: if isAdmin() ||
                    (request.auth != null && resource.data.parentEmail == request.auth.token.email);
      allow create: if true; // Anyone can create a booking
      allow update, delete: if isAdmin();
    }

    // Waitlist - Users can read their own, admins can read all
    match /waitlist/{entryId} {
      allow read: if isAdmin() ||
                    (request.auth != null && resource.data.parentEmail == request.auth.token.email);
      allow create: if true;
      allow update, delete: if isAdmin();
    }

    // Admins collection - Only admins can read, super-admins can write
    match /admins/{adminId} {
      allow read: if isAdmin();
      allow write: if isAdmin() &&
                     get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'super-admin';
    }
  }
}
